<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="2dp" android:right="2dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#FFDAB9"
                android:endColor="#F0EEEF" />
            <stroke
                android:width="1dp"
                android:color="#FFF" />
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="6dp"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp" />
        </shape>
    </item>
</selector>