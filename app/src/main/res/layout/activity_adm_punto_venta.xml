<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123"
    android:padding="16dp"
    tools:context="overant.asako.tpv.Admin.AdmPuntoVenta">

    <LinearLayout
        android:id="@+id/admPVllTop"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/ficha"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/admPVTitulo"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ficha"
            android:gravity="center"
            android:text="ID"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/admPVbtnUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:padding="6dp"
            android:src="@drawable/empresa" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/admPVllBot"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/admPVBtnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/boton_custom"
            android:text="Aceptar" />

        <Button
            android:id="@+id/admPVBtnCanc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/boton_custom"
            android:text="Cancelar" />

        <Button
            android:id="@+id/admPVBtnBaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/boton_custom"
            android:text="Dar de baja" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/admPVllTop"
        android:layout_above="@id/admPVllBot"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/ficha"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:" />

        <TextView
            android:id="@+id/admPVNombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:onClick="editThis"
            android:singleLine="true"
            android:text="testNombre"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Direccion:" />

        <TextView
            android:id="@+id/admPVDireccion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:onClick="editThis"
            android:singleLine="true"
            android:text="testNombre"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Localidad:" />

        <TextView
            android:id="@+id/admPVLocalidad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:onClick="editThis"
            android:singleLine="true"
            android:text="testNombre"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Provincia:" />

        <TextView
            android:id="@+id/admPVProvincia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:onClick="editThis"
            android:singleLine="true"
            android:text="testNombre"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cod. Postal:" />

        <TextView
            android:id="@+id/admPVCPostal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:onClick="editThis"
            android:singleLine="true"
            android:text="testNombre"
            android:textAppearance="?android:attr/textAppearanceLarge" />


    </LinearLayout>

</RelativeLayout>
