<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ticket_contenedor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/espacio_norma_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dee4ee"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_ticket_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="titulo" />

        <TextView
            android:id="@+id/item_ticket_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="fecha" />

        <TextView
            android:id="@+id/item_ticket_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="total" />

        <ImageView
            android:id="@+id/item_ticket_candado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/candado_unlock"/>

    </LinearLayout>


</android.support.v7.widget.CardView>